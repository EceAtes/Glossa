<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestingMenuActivity">


    <TextView
        android:id="@+id/Title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/design_default_color_primary_variant"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Level A1"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/design_default_color_primary"
        android:gravity="center"
        android:text="Your Tests"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title" />


        <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/white"
            android:id="@+id/test1"
            android:layout_width="102dp"
            android:layout_height="95dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/circle"
            android:backgroundTint="@null"
            android:text="test1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:onClick="onClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/white"
            android:id="@+id/test2"
            android:layout_width="102dp"
            android:layout_height="95dp"
            android:background="@drawable/circle"
            android:layout_marginTop="45dp"
            android:text="test2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/test1"
            android:onClick="onClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/white"
            android:id="@+id/test3"
            android:layout_width="102dp"
            android:layout_height="95dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/circle"
            android:backgroundTint="@null"
            android:text="test3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/test2"
            android:onClick="onClick"/>



    <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/white"
            android:id="@+id/test4"
            android:layout_width="102dp"
            android:layout_height="95dp"
            android:background="@drawable/circle"
            android:layout_marginTop="45dp"
            android:text="test4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/test3"
            android:onClick="onClick"/>

</androidx.constraintlayout.widget.ConstraintLayout>